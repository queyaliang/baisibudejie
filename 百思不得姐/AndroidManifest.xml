<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="demo.copy.baisi"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 在Android 4.4+版本中访问SDCARD需要声明权限 -->
    <!-- 读SDCARD -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 写SDCARD -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 挂载SDCARD -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name="demo.copy.baisi.app.BaisiApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
        <activity
            android:name="demo.copy.baisi.activity.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="demo.copy.baisi.activity.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="demo.copy.baisi.activity.RadioActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity android:name="demo.copy.baisi.activity.VoiceDetailActivity" >
        </activity>
        <activity android:name="demo.copy.baisi.activity.WebViewActivity" >
        </activity>
        <activity android:name="demo.copy.baisi.activity.LoginActivity" >
        </activity>
        <activity android:name="demo.copy.baisi.activity.RegistActivity" >
        </activity>
        <activity android:name="demo.copy.baisi.activity.ImageActivity" >
        </activity>

        <service android:name="demo.copy.baisi.service.VoicePlayerService" >
        </service>

        <!-- youmi -->
        <activity
            android:name="net.youmi.android.AdBrowser"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>

        <service
            android:name="net.youmi.android.AdService"
            android:exported="false" >
        </service>

        <receiver
            android:name="net.youmi.android.AdReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>
        <!-- /SDK 必须配置 -->
        <!-- 积分广告必须配置 -->
        <receiver
            android:name="net.youmi.android.offers.OffersReceiver"
            android:exported="false" >
        </receiver>
        <!-- ／积分广告必须配置 -->
        <!-- SmartBanner广告必须配置 -->
        <activity
            android:name="net.youmi.android.SmartBannerActivity"
            android:configChanges="keyboard|keyboardHidden|orientation" >
        </activity>

        <service
            android:name="net.youmi.android.SmartBannerService"
            android:exported="false" >
        </service>

        <activity
            android:name="demo.copy.baisi.SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>
    </application>

</manifest>