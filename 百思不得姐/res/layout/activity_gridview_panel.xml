<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rg_bottom_button"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
         >

        <GridView
            android:id="@+id/gridView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:horizontalSpacing="9dp"
            android:numColumns="auto_fit"
            android:stretchMode="spacingWidthUniform" 
            
            >
        </GridView>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_bottom_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#222222"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_xiangce"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0.25dp"
            android:layout_weight="1"
            android:background="@drawable/radiobutton"
            android:button="@null"
            android:gravity="center"
            android:text="来自相册"
            android:textColor="#eeeeee"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rb_xiangji"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.25dp"
            android:layout_weight="1"
            android:background="@drawable/radiobutton"
            android:button="@null"
            android:gravity="center"
            android:text="来自相机"
            android:textColor="#eeeeee"
            android:textSize="18sp" />
    </RadioGroup>

</RelativeLayout>