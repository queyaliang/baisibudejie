<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingTop="5dp"
    android:paddingBottom="3dp"
    android:id="@+id/rl_voice_item"
    >
    <demo.copy.baisi.ui.CircleImageView
        android:id="@+id/iv_profil_image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/welcom_icon"
        android:layout_marginLeft="5dp"
        />
    <TextView 
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/iv_profil_image"
        android:text="一个人的时候"
        android:layout_alignParentTop="true"
        android:gravity="left|center"
        android:layout_marginLeft="20dp"
        android:textSize="10sp"
        android:textColor="#111111"
        />
    <TextView 
        android:id="@+id/tv_publishtime"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_marginLeft="20dp"
        android:text="2010/10/05"
        android:textSize="11sp"
        android:singleLine="true"
        android:layout_marginRight="20dp"
        android:textColor="#777777"
        android:gravity="bottom"
        />
  <TextView 
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/iv_profil_image"
        android:layout_marginLeft="20dp"
        android:text="青春之歌"
        android:singleLine="true"
        android:textSize="10sp"
        android:gravity="center_vertical"
        />

</RelativeLayout>
